{
  "name": "binx-core",
  "version": "1.0.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js"
    }
  },
  "bin": {
    "binx-core": "dist/binx-cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "node -e \"require('node:fs').rmSync('dist', { recursive: true, force: true })\"",
    "build": "npm run clean && tsc",
    "lint": "eslint \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"test/**/*.js\" \"docs/**/*.md\" \"*.md\" \".github/workflows/**/*.yml\"",
    "test": "npm run build && node test/run-tests.js",
    "coverage": "npm run build && c8 --reporter=text --reporter=lcov --check-coverage --lines 70 --functions 70 --branches 60 --statements 70 node test/run-tests.js",
    "audit": "npm audit --audit-level=high",
    "bench": "npm run build && node benchmark/bench.js",
    "deps:check": "node scripts/verify-runtime-deps.js",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "yargs": "^18.0.0"
  },
  "type": "commonjs",
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@types/yargs": "^17.0.35",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "c8": "^10.1.3",
    "eslint": "^9.39.2",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3"
  }
}
